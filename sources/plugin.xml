<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<?eclipse version="3.4"?>

<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.archicontribs.form.FormEditorHandler"
            id="org.archicontribs.form.showForm"
            name="showForm">
         <commandParameter
               id="org.archicontribs.form.showFormName"
               name="formName"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            class="org.archicontribs.form.FormMenu"
            locationURI="popup:ArchimateDiagramEditorContextMenuProvider?after=additions">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.archicontribs.form.preferences.FormPreferencePage"
            id="org.archicontribs.form.FormPreferencePage"
            name="form plugin">
      </page>
   </extension>
</plugin>
